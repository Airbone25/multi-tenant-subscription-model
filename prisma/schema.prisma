generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role{
  OWNER
  MEMBER
}

model User{
  id String @id @default(uuid())
  email String @unique
  password String
  role Role
  org_id String
  organization Organization @relation(fields: [org_id], references: [id])
  created_at DateTime @default(now())
}

model Organization{
  id String @id @default(uuid())
  name String @unique
  plan_id String
  plan Plan @relation(fields: [plan_id], references: [id])
  Users User[]
  ApiKeys ApiKey[]
  created_at DateTime @default(now())
}

model Plan{
  id String @id @default(uuid())
  name String @unique
  requestLimit Int?
  rateLimit Int
  maxApiKeys Int?
  organizations Organization[]
}

model ApiKey{
  id String @id @default(uuid())
  key String @unique
  org_id String
  organization Organization @relation(fields: [org_id], references: [id])
  created_at DateTime @default(now())
}